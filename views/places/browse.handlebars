<div class="row">
  <div class="col-sm-12">
    <h2>Browse All Wellness Places</h2>
    {{#if places}}
      {{#each places}}
        <div class="post">
          <h3><a href="/places/{{placeId}}">{{name}}</a></h3>
          <p>{{type}} - {{city}}</p>
          <p>Average Rating: {{averageRating}} ({{reviewCount}} reviews)</p>
        </div>
      {{/each}}
      <nav aria-label="Page navigation">
        <ul class="pagination">
          {{#if hasPrev}}
            <li><a href="/places/browse?page={{subtract currentPage 1}}" class="page-link">Previous</a></li>
          {{/if}}
          {{#each (range 1 totalPages)}}
            <li class="{{#if (eq this ../currentPage)}}active{{/if}}"><a href="/places/browse?page={{this}}" class="page-link">{{this}}</a></li>
          {{/each}}
          {{#if hasNext}}
            <li><a href="/places/browse?page={{add currentPage 1}}" class="page-link">Next</a></li>
          {{/if}}
        </ul>
      </nav>
    {{else}}
      <p>No places found.</p>
    {{/if}}
  </div>
</div>