<!-- views/login.handlebars -->

<div style="text-align: center; margin-top: 20px;">
  <img src="/public/images/health_hive_logo.png" alt="Health Hive Logo" width="200">
</div>


<h1 style="text-align: center;">Login</h1>

<form action="/login" method="POST" id="login-form" style="max-width: 400px; margin: 0 auto; display: flex; flex-direction: column;">
  <label for="email">Email:</label>
  <input type="email" name="email" id="email" required style="margin-bottom: 10px; padding: 8px;">

  <label for="password">Password:</label>
  <input type="password" name="password" id="password" required style="margin-bottom: 10px; padding: 8px;">

  <button type="submit" style="padding: 10px;">Login</button>
</form>

{{#if error}}
  <p style="color: red; text-align: center; margin-top: 10px;">{{error}}</p>
{{/if}}

{{#if success}}
  <p style="color: green; text-align: center; margin-top: 10px;">{{success}}</p>
{{/if}}

<p style="text-align: center; margin-top: 20px;">
  <a href="/">Back to Home</a>
</p>

