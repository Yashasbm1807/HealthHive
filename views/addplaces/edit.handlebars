<div class="edit-place-container">
  <h1>Edit {{place.name}}</h1>
  
  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <form action="/manage-places/{{place._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label>Place Name:</label>
      <input type="text" name="name" value="{{place.name}}" required>
    </div>
    
    <div class="form-group">
      <label>Type:</label>
      <select name="type" required>
        <option value="Yoga Studio" {{#eq place.type "Yoga Studio"}}selected{{/eq}}>Yoga Studio</option>
        <option value="Gym" {{#eq place.type "Gym"}}selected{{/eq}}>Gym</option>
        <option value="Spa" {{#eq place.type "Spa"}}selected{{/eq}}>Spa</option>
        <option value="Meditation Center" {{#eq place.type "Meditation Center"}}selected{{/eq}}>Meditation Center</option>
        <option value="Holistic Center" {{#eq place.type "Holistic Center"}}selected{{/eq}}>Holistic Center</option>
      </select>
    </div>
    
    <div class="form-group">
      <label>Services Offered (comma separated):</label>
      <textarea name="servicesOffered" required>{{#if place.servicesOffered}}{{#if (isArray place.servicesOffered)}}{{place.servicesOffered.join ', '}}{{else}}{{place.servicesOffered}}{{/if}}{{/if}}</textarea>
    </div>
    
    <div class="form-group">
      <label>Address:</label>
      <input type="text" name="address" value="{{place.address}}" required>
    </div>
    
    <div class="form-group">
      <label>City:</label>
      <input type="text" name="city" value="{{place.city}}" required>
    </div>
    
    <div class="form-group">
      <label>Description:</label>
      <textarea name="description" required>{{place.description}}</textarea>
    </div>
    
    <div class="form-group">
      <label>Tags (comma separated):</label>
      <input type="text" name="tags" value="{{#if place.tags}}{{#if (isArray place.tags)}}{{place.tags.join ', '}}{{else}}{{place.tags}}{{/if}}{{/if}}" required>
    </div>
    
    <button type="submit" class="btn-submit">Update Place</button>
    <a href="/places/{{place._id}}" class="btn-cancel">Cancel</a>
  </form>
</div>

<style>
  .edit-place-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  .form-group {
    margin-bottom: 15px;
  }
  .form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }
  .form-group input[type="text"],
  .form-group textarea,
  .form-group select {
    width: 100%;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
  }
  .form-group textarea {
    height: 100px;
  }
  .btn-submit, .btn-cancel {
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    margin-right: 10px;
  }
  .btn-submit {
    background-color: #4CAF50;
    color: white;
  }
  .btn-cancel {
    background-color: #f44336;
    color: white;
  }
  .alert-danger {
    color: #721c24;
    background-color: #f8d7da;
    border-color: #f5c6cb;
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 4px;
  }
</style>